<html>
  <head>
    <%- include("./blocks/header.ejs") %>
    <title>Me</title>
  </head>
  <body>
    <%- include("./blocks/navbar.ejs") %>
    <div class="container">
    <div class="jumbotron text-center" style="background-color: #5f889e; border-color: #5f889e; color: #D9E4EC;">
     
          <% if (user.avatar) { %>
          <img
            class="card-img-top"
            src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=1280"
            alt="<%= user.tag %>"
            style="height: 150px; width: 150px; border-radius: 50%;"
          />
          <% } else { %>
          <img
            class="card-img-top"
            src="https://cdn.discordapp.com/embed/avatars/<%= (user.id % 5) %>.png"
            alt="<%= user.tag %>"
            style="height: 150px; width: 150px; border-radius: 50%;"
          />
          <% } %>
          <h3 class="mt-3">
            <%= user.username %><small class="special-mute"
              >#<%= user.discriminator %></small
            >
          </h3>
<% if(user.staff){ %><i title="Staff" class="fas fa-medal"></i> <% } %>
          <p class="text"><%= bio %></p>
          <a href="/me/settings" class="btn btn-secondary">
            Edit
          </a>
    
      </div>
        <% for(let i = 0; i < bots.length; i++){ %>
      <div class="card  text-center">
   <a class="badge right" href="/bots/<%= bots[i].id %>" ><i class="fas fa-eye"></i></a>
       
        <% if(user && bots[i].owners.map(o => o.toString()).includes(user.id)){  %>
    <a info="Edit guild"  href="/bots/<%= bots[i].id %>/edit" class="badge right-down"><i class="fas fa-pencil-alt"></i></a>
       
        <% } %>
  <img src="https://cdn.discordapp.com/avatars/<%= bots[i].id %>/<%= bots[i].avatar %>.png?size=1024" class="guildimg">
  <h1 class="name"><%= bots[i].name %></h1>
  <span class="votes badge badge-secondary"><i class="fas fa-chevron-circle-up"></i> <%= bots[i].votes %></span>
  <p class="desc"><%= bots[i].shortDesc %></p>
   <p class="tags text-muted"><%= bots[i].tags.slice(0,4).map(t => t).join(", ") %></p>
</div>
      <% } %>
    </div>
  </body>
  <style>
    .blur {
      filter: blur(8px);
      -webkit-filter: blur(8px);
      transition: 0.5s;
    }

    .blur:hover {
      filter: blur(0px);
      -webkit-filter: blur(0px);
    }

.special-mute:{
      color:#679FC2;
    }

body{
 font-family: 'Grandstander', cursive;
}
.card{
 padding: 12px;
      margin: 15px;
      background-color:  rgba(0,204,204,0.3) !important;
      border-radius: 25px;
      width: 350px;
      display: inline-block;
      height: 315px;
      word-break: break-all;
      transition: all 0.2s;
      top:0;
}
.card:hover{
  top: -7px;
}
.right{
  float: right;
}
.right-down{
  position: absolute;
  left: 90.5%;
  top: 10%;
}
.right-down-more{
  position: absolute;
  left: 90.5%;
  top: 17%;
}
.guildimg{
  width: 100px;
 border-radius: 25px 0px 10px 0px;
  position: absolute; 
  top: -1px;
  left: -1px;
  margin: 0px;
  padding: 0px;
}

.name{
  text-align: center;
  position: absolute;
  left: 30%;
  font-size: 20px;
}
.tags{
  position: absolute !important;
  top: 90% !important;
  left: 3% !important;
  color: #6c757d;
}
.text-muted{
  position: absolute;
  left: 30%;
  top: 15%;
  font-size: 13px;
  color: #679FC2 !important;
}

  .fas{
      color: #D9E4EC;
    }
.votes{
  position: absolute;
  top: 35%;
  left: 2%;
   opacity: 0.75;
}
.users{
  position: absolute;
  top: 35%;
  left: 15%;
   opacity: 0.75;
}
    a:hover{
cursor: pointer;
    }
.bots{
  position: absolute;
  top: 43%;
  left: 2%;
   opacity: 0.75;
}
.boosters{
  position: absolute;
  top: 43%;
  left: 15%;
   opacity: 0.75;
}
.desc{
  position: absolute;
  left: 30%;
  top: 40%;
  color: #D9E4EC;
}
    .vas {
      margin-top: 10px;
      margin-bottom: 20px;
    }
</style>
</html>